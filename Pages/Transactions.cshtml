@page
@model TransactionsModel
@{
    ViewData["Title"] = "Transactions";
}

<h2>Transactions</h2>

<form method="post">

    <div class="form-group" style="margin-bottom: 1em">
        <label for="CustomerId">Customer:</label>
        <select asp-for="CustomerId" class="form-control" style="width: 30em">
            @foreach (var cust in Model.Customers)
            {
                <option value="@cust.Id">@cust.Name</option>
            }
        </select>
    </div>
    <div class="form-group" style="margin-bottom: 1em">
        <label for="BookId">Book:</label>
        <select asp-for="BookId" class="form-control" style="width: 30em">
            @foreach (var book in Model.Books)
            {
                <option value="@book.Id">@book.Title</option>
            }
        </select>
    </div>
    <div class="form-group" style="margin-bottom: 1em">
        <label for="StaffId">Staff:</label>
        <select asp-for="StaffId" class="form-control" style="width: 30em">
            @foreach (var staff in Model.Staff)
            {
                <option value="@staff.Id">@staff.Name</option>
            }
        </select>
    </div>
    <div class="form-group" style="margin-bottom: 1em">
        <label for="AmountDue">Amount</label>
        <input style="width:10em" type="number" step="0.01" asp-for="AmountDue" class="form-control" min="0"/>
    </div>
    <div class="form-group" style="margin-bottom: 1em">
        <label for="Reason">Reason:</label>
        <select asp-for="Reason" class="form-control" style="width: 30em">
            <option value="Late">Late</option>
            <option value="Damaged">Damaged</option>
            <option value="Lost">Lost</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<h3 style="color:red">@Model.Error</h3>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Book</th>
                <th>Reason</th>
                <th>Payment Date</th>
                <th>Payment</th>
                <th>Completed By</th>
            </tr>
        </thead>
        @foreach (var charge in Model.Charges)
        {
            <tr>
                <td>@charge.CustomerName</td>
                <td>@charge.BookName</td>
                <td>@charge.Description</td>
                <td>@charge.PaymentDate</td>
                <td>$@charge.AmountDue</td>
                <td>@charge.StaffName</td>
            </tr>
        }
    </table>
</div>



